<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;500;700;800&display=swap" rel="stylesheet">

    <title>@Settings.AppName</title>
    <style>
        html {
            height: 100%;
        }

        body {
            background-color: #ECECEC;
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .container {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .logo {
            width: 200px;
        }

        .msg-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: white;
            border-radius: 5px;
            width: 180px;
            text-align: center;
            padding: 10px;
            margin-top: 30px;
            box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.158);
            font-family: 'Raleway', cursive;
        }

        .msg-bold {
            font-size: 1.2em;
            font-weight: 800;
            color: #0BDE55;
            text-transform: uppercase;
        }

        .msg-complement {
            font-size: 1.0em;
            font-weight: 800;
            text-transform: uppercase;
            color: #555555;
        }

        .loading-anim {
            display: flex;
            width: 180px;
            justify-content: space-around;
            align-items: center;
        }

        .l-width {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .l-1 {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #49F686;
        }

        .l-anim {
            animation-name: example;
            animation-duration: 1s;
            animation-iteration-count: infinite;
            animation-direction: alternate;
        }

        .l-anim-delay-01 {
            animation-delay: 0s;
        }

        .l-anim-delay-02 {
            animation-delay: 0.1s;
        }

        .l-anim-delay-03 {
            animation-delay: 0.2s;
        }

        @@keyframes example {
            0% {
            }

            50% {
                width: 20px;
                height: 20px;
                opacity: 0.5;
            }

            100% {
            }
        }

        .icon-link-broken {
            background: url(../../Content/icon_broken.svg);
            height: 40px;
            width: 40px;
            margin: 10px 0px 10px 0px;
        }

        .logo-uon-service {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Go Logo -->
        <img src="~/Content/logo.svg" class="logo">

        <!-- Loading Anim -->
        @*@<div class="loading-anim">
            <div class="l-width"><div class="l-1 l-anim l-anim-delay-01"></div></div>
            <div class="l-width"><div class="l-1 l-anim l-anim-delay-02"></div></div>
            <div class="l-width"><div class="l-1 l-anim l-anim-delay-03"></div></div>
        </div>*@

        <!-- User Messages-->
        @RenderBody()

        @*<div class="msg-container">
            <div class="msg-bold">A Redireccionar</div>
            <div class="msg-complement">Por favor Aguarde</div>
        </div>

        <div class="msg-container">
            <div class="icon-link-broken"></div>
            <div class="msg-bold">Link Expirado!</div>
            <div class="msg-complement"></div>
        </div>*@

        @*<img class="logo-uon-service" src="~/Content/logo_uon.svg" alt="" width="60px">*@
    </div>


    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

</body>
</html>
